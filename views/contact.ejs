<%- include('partials/header'); %>

<div class="form-showcase">
    <div class="contact-text">
        <h2>For Work and Collaborations</h2>
        <p>Please fill out the form to contact me!</p>
    </div>
    <div class="contact-form">
        <form action="/contact" method="post">
            <label for="name">Name: </label>
            <input type="text" name="userName" placeholder="Name of Individual / Company">
            <br>
            <label for="userEmail" >Email: </label>
            <input type="email" name="userEmail" placeholder="Email for Contact!" id="emailLabel">
            <br>
            <label for="workRelated">Reason: </label>
            <br>
            <textarea name="workRelated" id="workTopic" cols="30" rows="10" placeholder="Why you want to contact me?"></textarea>
            <br>
            <button type="submit" onclick="confirmation()">Submit</button>
        </form>
    </div>
</div>

<script>
    const confirmation = ()=>{
        alert("Your Message Successfully Sent!");
    }
</script>

<%- include('partials/footer'); %>